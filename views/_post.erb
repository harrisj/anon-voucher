<article class="media" id="post-<%= post.id %>">
  <figure class="media-left">
    <p class="image is-64x64">
      <img src="https://bulma.io/assets/images/placeholders/128x128.png" />
    </p>
  </figure>
  <div class="media-content">
    <div class="content">
      <p>
        <strong><%= post.user.display_name %></strong> <small>@<%= post.user.username %></small> <small><%= post.display_timestamp %></small>
        <br />
        <%= post.text %></p>
        <% if post.anonymous? %>
          <p>
          <% if post.vouched? %>
            <span class="tag is-success"><small><i class="fa-solid fa-check"></i> This post is by an anonymous user but has been vouched for by a trusted champion.</small></span>
          <% else %>
            <span class="tag is-warning"><small><i class="fa-solid fa-circle-exclamation"></i> This post is by an anonymous user and its veracity has not been reviewed.</small></span>
          <% end %>
          <% if post.vouched? || current_user.champion? %>
            <%= erb :_vouch_table, locals: {post: post, current_user: current_user } %>
          <% end %>
        </p>
        <% end %>
    </div>
  </div>
</article>